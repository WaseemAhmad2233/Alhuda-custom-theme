[
  {
    "name": "theme_info",
    "theme_name": "Alhudatheme",
    "theme_version": "0.0.1",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
          "type": "font_picker",
          "id": "type_heading_font",
          "default": "work_sans_n6",
          "label": "Headings font"
        },
      {
        "type": "font_picker", 
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "Body font"
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "110rem",
            "label": "t:options.page_width.wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      }
    ]
  },
 {
  "name": "Color schemes",
  "settings": [
    {
      "type": "color_scheme_group",
      "id": "color_schemes",
      "definition": [
        {
          "type": "color",
          "id": "background",
          "label": "Background color",
          "default": "#FFFFFF"
        },
        {
          "type": "color_background",
          "id": "background_gradient",
          "label": "Background gradient",
          "info": "Use a gradient instead of a solid background color"
        },
        {
          "type": "color",
          "id": "text",
          "label": "Text color",
          "default": "#121212"
        },
        {
          "type": "color",
          "id": "button",
          "label": "Primary button background",
          "default": "#121212"
        },
        {
          "type": "color",
          "id": "button_label",
          "label": "Primary button text",
          "default": "#FFFFFF"
        },
        {
          "type": "color",
          "id": "secondary_button_label",
          "label": "Secondary button text",
          "default": "#121212"
        },
        {
          "type": "color",
          "id": "shadow",
          "label": "Shadow color",
          "default": "#121212"
        }
      ],
      "role": {
        "text": "text",
        "background": {
          "solid": "background",
          "gradient": "background_gradient"
        },
        "links": "secondary_button_label",
        "icons": "text",
        "primary_button": "button",
        "on_primary_button": "button_label",
        "primary_button_border": "button",
        "secondary_button": "background",
        "on_secondary_button": "secondary_button_label",
        "secondary_button_border": "secondary_button_label"
      }
    }
  ]
},
{
  "name": "Social Media Icons",
  "settings": [
    { "type": "url", "id": "facebook_url", "label": "Facebook URL" },
    { "type": "url", "id": "instagram_url", "label": "Instagram URL" },
    { "type": "url", "id": "twitter_url", "label": "Twitter URL" },
    { "type": "url", "id": "linkedin_url", "label": "LinkedIn URL" },
    { "type": "url", "id": "youtube_url", "label": "YouTube URL" },
    { "type": "url", "id": "tiktok_url", "label": "TikTok URL" },
    { "type": "url", "id": "pinterest_url", "label": "Pinterest URL" },
    { "type": "url", "id": "snapchat_url", "label": "Snapchat URL" },
    { "type": "url", "id": "whatsapp_url", "label": "WhatsApp URL" },
    { "type": "url", "id": "reddit_url", "label": "Reddit URL" },
    { "type": "url", "id": "github_url", "label": "GitHub URL" }
  ]
}
]

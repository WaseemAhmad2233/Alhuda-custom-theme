<style>
  .hero-banner {
    position: relative;
    height: {{ section.settings.height }}px;
    overflow: hidden;
  }

  .hero-slider {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero-slide {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity {{ section.settings.transition_speed }}s ease-in-out;
  }

  .hero-slide.active {
    opacity: 1;
  }

  .hero-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity }});
    z-index: 1;
  }

  .hero-content {
    position: absolute;
    z-index: 2;
    padding: 40px;
    max-width: {{ section.settings.content_max_width }}px;
  }

  /* Position Classes */
  .hero-content.top-left {
    top: 40px;
    left: 40px;
  }

  .hero-content.top-center {
    top: 40px;
    left: 50%;
    transform: translateX(-50%);
  }

  .hero-content.top-right {
    top: 40px;
    right: 40px;
  }

  .hero-content.center-left {
    top: 50%;
    left: 40px;
    transform: translateY(-50%);
  }

  .hero-content.center-center {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .hero-content.center-right {
    top: 50%;
    right: 40px;
    transform: translateY(-50%);
  }

  .hero-content.bottom-left {
    bottom: 40px;
    left: 40px;
  }

  .hero-content.bottom-center {
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
  }

  .hero-content.bottom-right {
    bottom: 40px;
    right: 40px;
  }

  .hero-content h1 {
    font-size: {{ section.settings.heading_size }}px;
    margin-bottom: 15px;
    font-weight: bold;
    color: {{ section.settings.text_color }};
  }

  .hero-content p {
    font-size: {{ section.settings.subheading_size }}px;
    margin-bottom: 20px;
    color: {{ section.settings.text_color }};
  }

  .hero-button {
    background-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    padding: 15px 30px;
    text-decoration: none;
    display: inline-block;
    border-radius: 5px;
    transition: all 0.3s ease;
  }

  .hero-button:hover {
    opacity: 0.9;
  }

  .hero-dots {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    display: flex;
    gap: 10px;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .dot.active {
    background-color: white;
    width: 30px;
    border-radius: 6px;
  }
</style>

<div class="hero-banner">
  <div class="hero-slider">
    {% for block in section.blocks %}
      <div class="hero-slide {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}">
        <img src="{{ block.settings.image | image_url: width: 1920 }}" alt="{{ block.settings.heading }}">
        <div class="hero-overlay"></div>
        <div class="hero-content {{ block.settings.text_position }}">
          <h1>{{ block.settings.heading }}</h1>
          <p>{{ block.settings.subheading }}</p>
          {% if block.settings.button_text %}
            <a href="{{ block.settings.button_link }}" class="hero-button">
              {{ block.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}

    <div class="hero-dots">
      {% for block in section.blocks %}
        <span class="dot {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}"></span>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  let currentSlide = 0;
  const slides = document.querySelectorAll('.hero-slide');
  const dots = document.querySelectorAll('.dot');
  const slideDuration = {{ section.settings.slide_duration }};

  function showSlide(n) {
    slides.forEach(slide => slide.classList.remove('active'));
    dots.forEach(dot => dot.classList.remove('active'));
    
    slides[n].classList.add('active');
    dots[n].classList.add('active');
  }

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      currentSlide = index;
      showSlide(currentSlide);
    });
  });

  setInterval(() => {
    currentSlide = (currentSlide + 1) % slides.length;
    showSlide(currentSlide);
  }, slideDuration * 1000);
</script>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "range",
      "id": "height",
      "min": 300,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Banner Height",
      "default": 500
    },
    {
      "type": "range",
      "id": "content_max_width",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Content Max Width",
      "default": 500
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 24,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Heading Size",
      "default": 48
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 14,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Subheading Size",
      "default": 18
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay Opacity",
      "default": 0.3
    },
    {
      "type": "range",
      "id": "slide_duration",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Slide Duration",
      "default": 5
    },
    {
      "type": "range",
      "id": "transition_speed",
      "min": 0.3,
      "max": 2,
      "step": 0.1,
      "unit": "s",
      "label": "Transition Speed",
      "default": 0.5
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "select",
          "id": "text_position",
          "options": [
            { "value": "top-left", "label": "Top Left" },
            { "value": "top-center", "label": "Top Center" },
            { "value": "top-right", "label": "Top Right" },
            { "value": "center-left", "label": "Center Left" },
            { "value": "center-center", "label": "Center Center" },
            { "value": "center-right", "label": "Center Right" },
            { "value": "bottom-left", "label": "Bottom Left" },
            { "value": "bottom-center", "label": "Bottom Center" },
            { "value": "bottom-right", "label": "Bottom Right" }
          ],
          "label": "Text Position",
          "default": "center-center"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Welcome"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "blocks": [
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}

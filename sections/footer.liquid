<div class="footer-section-{{ section.id }} custom-footer color-{{ section.settings.color_scheme }} section-wrapper">
  <div class="cf-container {% if section.settings.full_width %}page-width{% endif %}">
    
    <div class="cf-top-wrapper">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'link_list' %}
          <div class="cf-block cf-links" {{ block.shopify_attributes }}>
            <button class="cf-accordion-trigger" aria-expanded="false">
              {{ block.settings.title }}
              <span class="cf-icon">
                <svg width="12" height="8" viewBox="0 0 10 6" fill="none">
                  <path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </button>
            <div class="cf-accordion-content">
              <ul class="cf-menu">
                {% if linklists[block.settings.menu].links.size > 0 %}
                  {% for link in linklists[block.settings.menu].links %}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                  {% endfor %}
                {% else %}
                  <li><a href="#">Shipping Policy</a></li>
                  <li><a href="#">Returns & Refunds</a></li>
                  <li><a href="#">Contact Us</a></li>
                  <li><a href="#">About Us</a></li>
                {% endif %}
              </ul>
            </div>
          </div>
          
          {% when 'apps_payments' %}
          <div class="cf-block cf-apps-payments" {{ block.shopify_attributes }}>
            {% if block.settings.app_title != blank %}
            <div class="cf-app-section">
              <h3 class="cf-title">{{ block.settings.app_title }}</h3>
              <div class="cf-app-badges">
                {% if block.settings.apple_img != blank %}
                  <a href="{{ block.settings.apple_link }}">
                    <img src="{{ block.settings.apple_img | image_url: width: 220 }}" alt="App Store" loading="lazy" width="110" height="35">
                  </a>
                {% endif %}
                {% if block.settings.google_img != blank %}
                  <a href="{{ block.settings.google_link }}">
                    <img src="{{ block.settings.google_img | image_url: width: 220 }}" alt="Play Store" loading="lazy" width="110" height="35">
                  </a>
                {% endif %}
              </div>
            </div>
            {% endif %}
            
            <div class="cf-payment-section">
              <h3 class="cf-title">{{ block.settings.pay_title }}</h3>
              <div class="cf-payment-icons">
                {% for type in shop.enabled_payment_types %}
                  <div class="cf-payment-icon-item">
                    {{ type | payment_type_svg_tag: class: 'cf-pay-svg' }}
                  </div>
                {% else %}
                   {{ 'visa' | payment_type_svg_tag: class: 'cf-pay-svg' }}
                   {{ 'master' | payment_type_svg_tag: class: 'cf-pay-svg' }}
                   {{ 'paypal' | payment_type_svg_tag: class: 'cf-pay-svg' }}
                {% endfor %}
              </div>
            </div>
          </div>
        {% endcase %}
      {% endfor %}
    </div>

    <div class="cf-big-logo-container">
      {% if section.settings.footer_big_logo != blank %}
        {{ section.settings.footer_big_logo | image_url: width: 2000 | image_tag: class: 'cf-footer-big-img', loading: 'lazy' }}
      {% else %}
        <!-- Placeholder for Big Logo -->
        <h2 style="font-size: 80px; opacity: 1; line-height: 1; margin: 0; text-transform: uppercase;">{{ shop.name }}</h2>
